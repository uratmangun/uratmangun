# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Your site URL for attribution (helps with OpenRouter analytics)
OPENROUTER_HTTP_REFERER=https://your-site.com

# Optional: Your application name for attribution
OPENROUTER_X_TITLE=ASCII Art Generator

# Optional: Base URL for OpenRouter API (usually don't need to change)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# GitHub Token for automated commits (required for GitHub Actions workflow)
# Create a Personal Access Token with 'repo' permissions at: https://github.com/settings/tokens
ADMIN_TOKEN=your_github_personal_access_token_here
